/*

Pattern 4: Right angle Full pyramid of *

*
* *
* * *
* * * *
* * * * *
* * * *
* * * 
* *
*

*/


#include <iostream>
using namespace std;

int main() {
    int i, j,row;

    cout<<"Enter number of row: ";
    cin>>row;

    for(i=1;i<=2 * row; i++)
    {
        int c = i > row ? 2*row-i : i;
        for(j=1; j<=c; j++)
        {
            cout<<"* ";
        }
        cout<<endl;
    }

    return 0;
}
