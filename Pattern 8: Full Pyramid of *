/*----------------------------------------
Pattern 8: Full Pyramid of *

        *
      * * *
    * * * * *
  * * * * * * *
* * * * * * * * *
------------------------------------------*/


#include <iostream>
using namespace std;

int main() {
    int n,s, row,col;
    cout<<"Enter the number of rows: ";
    cin>>n;

    for(row=1; row<=n; row++)
    {
        //count space
        for(s=1; s<=n-row; s++)
        {
            cout<<" ";
        }
        for(col=1; col<=(2*row-1); col++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    
    return 0;
}
