/*Print Half Pyramid of (*) 

*
* *
* * *
* * * *
* * * * *

*/

//Code

#include <iostream>
using namespace std;

int main() {
    int n;
    cout<<"enter number to print: ";
    cin>>n;

    for(int row =1; row<=n; row++)
    {
        for(int col =1; col<=n-row+1; col++)
        {
            cout<<"* ";
        }
        //when 1st row complete then change
        //new line

        cout<<"\n";
    }
    
    return 0;
}
